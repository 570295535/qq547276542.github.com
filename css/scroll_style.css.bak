@import 'http://fonts.googleapis.com/css?family=Noto+Sans';
body {
  padding: 0;
  margin: 0;

  background: -moz-linear-gradient(-45deg, #e7f1f9 0, #e7f1f9 25%, #cce3f7 50%, #cce1f4 75%, #cce1f4 100%);
  background: -webkit-linear-gradient(-45deg, #e7f1f9 0, #e7f1f9 25%, #cce3f7 50%, #cce1f4 75%, #cce1f4 100%);
  background-repeat: no-repeat;
  background-attachment: fixed;
}

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  border-radius: 12px;
  background-color: rgba(2, 22, 39, 0.2);
}

::-webkit-scrollbar-thumb {
  border-radius: 12px;
  background-color: rgba(2, 22, 39, 0.6);
}

.chat-thread {
  margin: auto auto auto auto;
  padding: 0 20px 0 0;
  list-style: none;
  overflow-y: scroll;
  overflow-x: hidden;
 
}


/* Small screens */
@media all and (max-width: 767px) {
  .chat-thread {
    width: 160px;
 /*   height: 90%;*/
	float:left
  }

  .chat-window {
    left: 5%;
    width: 90%;
  }
}
/* Medium and large screens */
@media all and (min-width: 768px) {
  .chat-thread {
    width: 160px;
  /*  height: 90%;*/
    float:left;
    
  }

  .chat-window {
    left: 25%;
    width: 50%;
  }
}

